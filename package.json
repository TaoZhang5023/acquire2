        "react-dom": "^16.4.0",
        "react-test-renderer": "^16.4.0",
        "seedrandom": "^2.4.3",
        "sockjs-client": "^1.1.4",
        "source-map-loader": "^0.2.3",
        "style-loader": "^0.21.0",
        "ts-jest": "^22.4.6",
        "ts-node": "^6.0.5",
        "tslint": "^5.10.0",
        "typescript": "^2.8.3",
        "typings-for-css-modules-loader": "^1.7.0",
        "webpack": "^4.8.3",
        "webpack-cli": "^2.1.4",
        "webpack-serve": "^1.0.2"
    },
    "scripts": {
        "build": "yarn build-client ; yarn build-examples ; yarn build-review ; yarn build-server",
        "build-client": "APP=index MODE=production webpack",
        "build-examples": "APP=examples MODE=production webpack",
        "build-review": "APP=review MODE=production webpack",
        "build-server": "tsc --project tsconfig.server.json",
        "client": "APP=index yarn webpack-serve",
        "examples": "APP=examples yarn webpack-serve",
        "review": "APP=review yarn webpack-serve",
        "server": "nodemon -r ts-node/register src/server/main.ts",
        "test": "jest",
        "lint": "tslint --project tsconfig.json --config tslint.json --fix",
        "format":
            "find . \\( -path ./.git -o -path ./node_modules \\) -prune -o -print | grep -E '\\.(css|js(on)?|md|tsx?)$' | xargs prettier --write --loglevel warn"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "^.+\\.test\\.tsx?$",
        "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
        "moduleNameMapper": {
            "\\.css$": "identity-obj-proxy"
        }
    },
    "prettier": {
        "printWidth": 160,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all"
    }
}
