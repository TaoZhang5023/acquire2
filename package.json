{
    "private": true,
    "dependencies": {
        "immutable": "4.0.0-rc.9"
    },
    "devDependencies": {
        "@types/enzyme": "*",
        "@types/enzyme-adapter-react-16": "*",
        "@types/jest": "*",
        "@types/node": "*",
        "@types/react": "*",
        "@types/react-dom": "*",
        "@types/react-test-renderer": "*",
        "awesome-typescript-loader": "*",
        "caniuse-lite": "*",
        "css-loader": "*",
        "enzyme": "*",
        "enzyme-adapter-react-16": "*",
        "html-webpack-plugin": "*",
        "identity-obj-proxy": "*",
        "jest": "*",
        "normalize.css": "*",
        "postcss-cssnext": "*",
        "postcss-import": "*",
        "postcss-loader": "*",
        "postcss-url": "*",
        "raw-loader": "*",
        "react": "*",
        "react-dom": "*",
        "react-test-renderer": "*",
        "seedrandom": "*",
        "source-map-loader": "*",
        "style-loader": "*",
        "ts-jest": "*",
        "ts-node": "*",
        "typescript": "*",
        "typings-for-css-modules-loader": "*",
        "webpack": "*",
        "webpack-cli": "*",
        "webpack-serve": "*"
    },
    "scripts": {
        "build": "yarn build-examples ; yarn build-review ; yarn build-server",
        "build-examples": "APP=examples MODE=production ./node_modules/.bin/webpack",
        "build-review": "APP=review MODE=production ./node_modules/.bin/webpack",
        "build-server": "tsc --project tsconfig.server.json",
        "examples": "APP=examples yarn webpack-serve",
        "review": "APP=review yarn webpack-serve",
        "test": "jest"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
        "moduleNameMapper": {
            "\\.(css)$": "identity-obj-proxy"
        }
    }
}
